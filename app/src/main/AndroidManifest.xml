<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dilse">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DilSe">
        <activity android:name=".views.SplashActivity"
            android:theme="@style/SplashStyle"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.SearchActivity" />
        <activity android:name=".views.MyOrdersActivity" />
        <activity android:name=".views.OrderConfirmActivity" />
        <activity android:name=".views.ProductDetailsActivity" />
        <activity android:name=".views.StationariesActivity" />
        <activity android:name=".views.EarphonesActivity" />
        <activity android:name=".views.SoftToysActivity" />
        <activity android:name=".views.CardsActivity" />
        <activity android:name=".views.FlowersActivity" />
        <activity android:name=".views.SignUpActivity" />
        <activity android:name=".views.SignInActivity"/>
        <activity android:name=".views.HomeActivity" />
    </application>

</manifest>